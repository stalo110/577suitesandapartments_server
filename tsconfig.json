{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "rootDir": "src",  
    "outDir": "dist",
    "resolveJsonModule": true,
    // "skipLibCheck": false,
    "types": ["node"], 
    "skipLibCheck": true  
  },
  "include": [
    "src/index.ts",
    "src/db.ts",
    "src/models/BookingModel.ts",
    "src/models/PaymentModel.ts",
    "src/models/SuiteModel.ts",
    "src/routes/authRoutes.ts",
    "src/routes/suitesRoutes.ts",
    "src/routes/adminSuitesRoutes.ts",
    "src/routes/availabilityRoutes.ts",
    "src/routes/bookingsRoutes.ts",
    "src/routes/paymentsRoutes.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
